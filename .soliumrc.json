{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "security/no-block-members": ["off", ["timestamp"]],
    "security/no-call-value": "off",
    "security/no-inline-assembly": "off"
  }
}
